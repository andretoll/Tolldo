<UserControl x:Class="Tolldo.Views.UserControls.SettingsMenuUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prop="clr-namespace:Tolldo.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <DockPanel Margin="10 20">
        
        <!-- Buttons -->
        <StackPanel DockPanel.Dock="Bottom"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            
            <Button Style="{StaticResource SuccessButton}"
                    Margin="0 0 10 0"
                    Content="Save"/>

            <Button Style="{StaticResource PrimaryButton}"
                    Content="Close"
                    Command="{Binding DataContext.ToggleSettingsMenuCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Border}}"/>

        </StackPanel>

        <!-- Settings -->
        <TabControl Background="{DynamicResource PrimaryBackgroundBrush}">
            <TabItem Header="General">
                <Grid>
                    <TextBlock Text="Tab 1 content..." />
                </Grid>
            </TabItem>
            <TabItem Header="Application">
                <TextBlock Text="Tab 2 content..." />
            </TabItem>
            <TabItem Header="Appearance">
                <TextBlock Text="Tab 3 content..." />
            </TabItem>
        </TabControl>
        
        <!--<CheckBox IsChecked="{Binding Source={x:Static prop:Settings.Default}, Path=NumberedTasks}" />-->
    </DockPanel>
</UserControl>
